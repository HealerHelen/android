<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:columnCount="4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/tv_quizCount"
        android:layout_column="3"
        android:layout_row="2"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_column="0"
        android:layout_row="3"
        android:text="     数值范围（上限）："
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tv_maxNumber"
        android:layout_column="3"
        android:layout_row="3"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="4"
        android:text="============================"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_showQuestionNumber"
        android:layout_column="0"
        android:layout_row="6"
        android:text="第一题"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_showQuestion"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="7"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/et_getAnswer"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="8"
        android:ems="10"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <Button
        android:layout_column="0"
        android:layout_row="9"
        android:onClick="answerSubmit"
        android:text="提交" />

    <TextView
        android:layout_column="0"
        android:layout_gravity="left|bottom"
        android:layout_row="2"
        android:text="     题目数量："
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/checkYes"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="9"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView1"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:text="您订制的题目要求如下："
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/bt_clearText"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="9"
        android:onClick="Clear"
        android:text="重置" />

    <Button
        android:id="@+id/bt_clearText"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="9"
        android:onClick="Clear"
        android:text="重置" />

</GridLayout>